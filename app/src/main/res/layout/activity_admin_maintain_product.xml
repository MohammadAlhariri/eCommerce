<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    tools:context=".Admin.AdminMaintainProduct">

    <com.rey.material.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/maintain_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/productname"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/maintain_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maintain_product_image"
            android:layout_margin="5dp"
            android:background="@drawable/input_design"
            android:hint="Product Price"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/purple"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/maintain_product_mame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maintain_product_price"
            android:layout_margin="5dp"
            android:hint="Product Name"
            android:textAlignment="center"
            android:background="@drawable/input_design"
            android:padding="12dp"

            android:textColor="@color/purple"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/maintain_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maintain_product_mame"
            android:layout_margin="5dp"
            android:hint="Product Description"
            android:textAlignment="center"
            android:background="@drawable/input_design"
            android:padding="12dp"

            android:textColor="@color/purple"
            android:textSize="14sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/maintain_product_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maintain_product_description"
            android:layout_margin="5dp"
            android:text="Apply Changes "
            android:textAlignment="center"
            android:background="@drawable/buttons"
            android:padding="12dp"

            android:textColor="@color/white"
            android:textSize="14sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_product_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maintain_product_button"
            android:layout_margin="5dp"
            android:text="Delete Product "
            android:textAlignment="center"
            android:background="@drawable/buttons"
            android:padding="12dp"

            android:textColor="@color/white"
            android:textSize="14sp" />
    </com.rey.material.widget.RelativeLayout>

</androidx.cardview.widget.CardView>